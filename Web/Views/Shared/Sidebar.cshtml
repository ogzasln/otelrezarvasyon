<!-- Blog Search Well -->
<div class="well">
    <h4>Arama</h4>
    @using (Html.BeginForm("Index", "Posts", FormMethod.Get))
    {
        <div class="input-group">
            <input type="text" name="query" value="@Request.QueryString["query"]" class="form-control">
            <span class="input-group-btn">
                <button class="btn btn-default" type="submit">
                    <span class="glyphicon glyphicon-search"></span>
                </button>
            </span>
        </div>
    }
    <!-- /.input-group -->
</div>
@if (Session["user"] == null)
{
    @Html.Partial("Login", new Web.ViewModel.UserViewModel())
}
else
{
    var user = (Data.UserSet)Session["user"];
    @Html.Partial("Profile", user)
}
<!-- Blog Categories Well -->
<div class="well">
    <h4>Menüler</h4>
    <div>
        <ul class="list-unstyled">
           <li>@Html.ActionLink("İlanlar", "Index", "Ads")</li>
            @if (Web.Helpers.UserHelper.isMember() == true)
            {
                <li>
                    @Html.ActionLink("Ödemeler", "Index", "Credit")
                </li>
                <li>
                    @Html.ActionLink("Sepetim", "Index", "Cart")
                </li>
            }
        </ul>
    </div>
    <!-- /.row -->
</div>